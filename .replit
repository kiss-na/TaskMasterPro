modules = ["flutter", "dart", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Task Manager App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Static Task Manager App"

[[workflows.workflow]]
name = "Task Manager App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0 -t lib/simple_web_app.dart"
waitForPort = 5000

[[workflows.workflow]]
name = "Static Task Manager App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd static_web && python -m http.server 5001"
waitForPort = 5001

[deployment]
run = ["sh", "-c", "flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0 -t lib/simple_web_app.dart"]

[[ports]]
localPort = 5000
externalPort = 80
